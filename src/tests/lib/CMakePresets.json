{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja Multi-Config",
      "installDir": "${sourceDir}/install",
      "toolchainFile": "$env{ACE}/toolchain.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;MinSizeRel;RelWithDebInfo;Coverage",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "shared",
      "displayName": "Shared",
      "binaryDir": "${sourceDir}/build/shared",
      "inherits": "default",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      }
    },
    {
      "name": "windows-default",
      "displayName": "Windows Default",
      "binaryDir": "${sourceDir}/build/windows",
      "inherits": "default",
      "cacheVariables": {
        "ACE_TARGET": "x86_64-pc-windows-msvc"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-shared",
      "displayName": "Windows Shared",
      "binaryDir": "${sourceDir}/build/windows/shared",
      "inherits": "windows-default",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "vs-default",
      "displayName": "VS Default",
      "binaryDir": "${sourceDir}/build/vs",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;MinSizeRel;RelWithDebInfo",
        "ACE_USE_VISUAL_STUDIO": true
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{VCToolsVersion}",
        "rhs": ""
      }
    },
    {
      "name": "vs-shared",
      "displayName": "VS Shared",
      "binaryDir": "${sourceDir}/build/vs/shared",
      "inherits": "vs-default",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-debug",
      "displayName": "Debug",
      "configuration": "Debug",
      "configurePreset": "default"
    },
